@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "User")
</p>

<form asp-action="Search" method="get" class="mb-3">
    <input type="text" name="query" class="form-control" placeholder="Buscar por nombre o email" style="width: 300px; display: inline-block;" />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@user.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@user.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>